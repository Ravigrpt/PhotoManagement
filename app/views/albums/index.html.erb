<p><%= link_to "Add Album", new_album_path %></p>
<div class="page-unit">
<p>Total Albums: <%= @albums.size %></p>
<table class="table">
	<th>ID</th>
	<th>Name</th>
	<th>Description</th>
	<th>No of Photos</th>
	<th>Created</th>
	<th>Updated</th>
	<% @albums.each do |album| %>
		<tr><td><%= album.id %></td>
		<td><%= link_to album.name, album_path(album.id) %></td>
		<td><%= album.description %></td>
		<td><%= album.photos.size %></td>
		<td><%= date_format(album.created_at) %></td>
		<td><%= date_format(album.updated_at) %></td></tr>
	<% end %>
</table>
</div>