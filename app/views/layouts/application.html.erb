<!DOCTYPE html>
<html>
  <head>
    <title>PhotoManagement</title>
  
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= stylesheet_link_tag    "bootstrap" %>
    <%= javascript_include_tag "bootstrap" %>
    <%= javascript_include_tag "bootstrap.min" %>
    <%= javascript_include_tag "jquery.min" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>

  </head>
  <body>

    <% if current_user %>
      
      <div class="navbar navbar-inverse">
        <div class="navbar-inner">
          <ul class="nav">
             <li><%= link_to "Add Album", new_album_path %></li>
             <li><%= link_to "Albums", albums_url %></li>
             <li><%= link_to "Settings", settings_albums_path %></li>
            <li><%= link_to "Log Out",  log_out_path %></li>
          </ul>
        </div>
      </div>
    
      <div class="unit">
        
        <p>Loged in as :<%= current_user.email %></p>
        <p>Photo Management System</p>
        <ul class="nav nav-tabs" id="myTab">
          <li class= <%= active_tab("Photos", controller.controller_path) %> ><%= link_to "Photos", photos_url %></li>
          <li class= <%= active_tab("Albums", controller.controller_path) %> ><%= link_to "Albums", albums_url %></li>
          <li class= <%= active_tab("Comments", controller.controller_path) %> ><%= link_to "Comments", comments_url %></li>
        </ul>
    
        <div class="page-unit">
  	     <%= yield %>
          <% flash.each do |name, msg| %>
            <%= content_tag :div, msg, :id => "flash#{name}" %>
          <% end %>
        </div>
      </div>

      <div class="app-footer">
        Created By Ramans, If you have any problem contact this number 9505010200(Ramans)
      </div>

    <% else %>

      <div class="login-form">
        
        <div style="text-align:right;padding:5px;">
          <%= link_to "Sign Up",  sign_up_path, :class => "btn" %>
        </div>
        <%= yield %>
        <% flash.each do |name, msg| %>
          <%= content_tag :div, msg, :id => "flash#{name}" %>
        <% end %>
        
      </div>

    <% end %>
    
  </body>
</html>
